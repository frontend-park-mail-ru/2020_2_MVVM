<fest:template xmlns:fest="http://fest.mail.ru" context_name="items">
    <fest:each iterate="items" index="i" value="item">
        <div class="list-row">
            <div class="list-row-photo">
                <div class="list-row-photo__bg list-row-photo__bg_employers"/>
            </div>
            <div class="list-row-description">
                <div class="list-row-description__name"><a><fest:value>item.title</fest:value></a></div>
                <div class="list-row-description__specialism"><fest:value>item.description</fest:value><fest:space/></div>
                <div class="list-row-description__location"><fest:space/><fest:value>item.area_search</fest:value>/Росиия</div>
            </div>
        </div>
    </fest:each>
</fest:template>