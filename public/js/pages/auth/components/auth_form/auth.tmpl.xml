<fest:template xmlns:fest="http://fest.mail.ru" context_name="items">
    <div class="container">
            <div class="page__name">Авторизация</div>
            <div class="auth">
                <form>
                    <div class="form__field_name">
                        <div class="form__field_lable">Email</div>
                        <div class="cfield">
                            <input id="emailAuth" name="email" class="text" placeholder="Введите email"/>
                            <span class="error" aria-live="polite"/>
                        </div>
                    </div>
                    <div class="form__field_name">
                        <div class="form__field_lable">Пароль</div>
                        <div class="cfield">
                            <input id="passAuth" type="password" name="password" class="password" placeholder="Введите пароль"/>
                            <span class="error" aria-live="polite"/>
                        </div>
                    </div>
                    <button id="entBtnAuth" class="enterBtn" type="submit">Войти</button>
                </form>
                <div class="form__link"><a href="/reg">Нет аккаунта? Регистрация</a></div>
            </div>
    </div>
</fest:template>