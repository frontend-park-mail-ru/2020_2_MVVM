<fest:template xmlns:fest="http://fest.mail.ru" context_name="items">
    <div class="container">
        <form>
            <div class="auth">
                <form>
                    <div class="cfield">
                        <input id="emailAuth" class="text" placeholder="Email"/>
                        <span class="error" aria-live="polite"></span>
                    </div>
                    <div class="cfield">
                        <input id="nickAuth" class="text" placeholder="Никнейм"/>
                        <span class="error" aria-live="polite"></span>
                    </div>
                    <div class="cfield">
                        <input id="passAuth" type="password" class="password" placeholder="Введите пароль"/>
                        <span class="error" aria-live="polite"></span>
                    </div>
                    <button id="entBtnAuth" class="enterBtn" type="submit">Войти</button>
                </form>
            </div>
        </form>
    </div>
</fest:template>