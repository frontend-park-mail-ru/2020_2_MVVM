<fest:template xmlns:fest="http://fest.mail.ru" context_name="items">
    <div class="container container_full">
            <div class="auth">
                <form>
                    <div class="input-data-card">
                        <div class="page-name page-name_small">Авторизация</div>
                        <div class="form-field">
                            <div class="form-field__lable">Email</div>
                            <div class="form-field__content">
                                <input id="emailAuth" name="email" class="cfield" placeholder="Введите email"/>
                                <span class="error" aria-live="polite"/>
                            </div>
                        </div>
                        <div class="form-field">
                            <div class="form-field__lable">Пароль</div>
                            <div class="form-field__content">
                                <input id="passAuth" type="password" name="password" class="cfield" placeholder="Введите пароль"/>
                                <span class="error" aria-live="polite"/>
                            </div>
                        </div>
                        <button id="entBtnAuth" class="input-data-card__enter-btn" type="submit">Войти</button>
                        <a href="/reg"><div class="input-data-card__link">Еще нет аккаунта? Зарегистрироваться</div></a>
                    </div>
                </form>
            </div>
    </div>
</fest:template>