<fest:template xmlns:fest="http://fest.mail.ru" >
    <div class="bg">
        <div class="popUp__cont">
            <div class="popUp__cont_block"/>
            <div class="popUp__cont_center">
                <div class="popUp__cont_lable">Опыт работы</div>
                <form class="popUp__cont_form" id="popUp__cand_form">
                    <div class="popUp__cont_input">
                        <label for="start_work">Начало работы</label>
                        <div class="popUp__cont_data">
                            <div><input id="start_work" type="date" name="start_work_year"/></div>
                        </div>
                    </div>
                    <input type="checkbox" id="popUp__cont_checkbox"/>По текущее время
                    <br/>
                    <br/>
                    <div class="popUp__cont_input">
                        <div class="popUp__cont_input">
                            <label for="end_work">Окончание работы</label>
                            <div class="popUp__cont_data">
                                <div><input id="end_work" type="date" name="end_work_year"/></div>
                            </div>
                        </div>
                    </div>
                    <div class="popUp__cont_input">
                        <label for="type_of_job">Должность</label>
                        <div>
                            <input class="popUp__cont_text" id="type_of_job" name="type_of_job" placeholder="Должность"/>
                        </div>
                    </div>
                    <div class="popUp__cont_input">
                        <label for="job">Организация</label>
                        <div>
                            <input class="popUp__cont_text" id="job" name="job" placeholder="Название компании"/>
                        </div>
                    </div>
                    <div class="popUp__cont_input">
                        <label for="duties">Обязанности на рабочем месте</label>
                        <div>
                            <textarea class="popUp__cont_text" id="duties" name="duties" placeholder="Опишите, что вы делали на работе. Работодатели часто ищут резюме по ключевым навыкам, например, «работа в торговом зале», «работа с документами», «сопровождение первых лиц», «управление коллективом» и т.д."/>
                        </div>
                    </div>
                </form>
                <div class="btn__add_exp">сохранить</div>
            </div>
            <div class="popUp__cont_block"/>
        </div>
    </div>
</fest:template>