<fest:template xmlns:fest="http://fest.mail.ru">

        <div class="form-wrap">
            <div class="profile">
                <div class="profile-photo">
                    <img src="img/profile.png" alt=""/>
                </div>
                <div class="upload-photo">
                    <div class="btn-blue">
                        <p>Загрузить аватар</p>
                    </div>
                </div>
                <div>
                    <h1>Ваше резюме</h1>
                    <div class="btm-apply-alternative upload-resume">
                        <button class="btn-pink" type="submit">Загрузить из файла</button>
                        <button class="btn-pink" type="submit">Заказать резюме</button>
                    </div>
                </div>
            </div>
            <div class="summary">
                <form class="candidate" method="post" action="#">
                    <div>
                        <p class="description-block">Контактные данные</p>
                        <label class="form-labels" for="username">Имя*</label>
                        <input class="user-info" id="username" type="text" value=""/>
                    </div>
                    <div>
                        <label class="form-labels" for="surname">Фамилия*</label>
                        <input class="user-info" id="surname" type="text" value=""/>
                    </div>
                    <div class="switch">
                        <div>Пол*</div>
                        <label class="form-switch" for="male">
                            <input class="input-switch" id="male" type="radio" name="sex" value=""/>
                            <div class="switch-control male"/>
                        </label>
                        <label class="form-switch" for="female">
                            <input class="input-switch" id="female" type="radio" name="sex" value=""/>
                            <div class="switch-control female"/>
                        </label>
                        <br/>
                        <br/>
                        <br/>
                    </div>
                    <div>
                        <label class="form-labels" for="email">E-mail*</label>
                        <input class="user-info" id="email" type="email" value=""/>
                    </div>
                    <div>
                        <label class="form-labels" for="country">Страна проживания</label>
                        <select class="user-all" id="country">
                            <option value="">Россия</option>
                            <option value="">Украина</option>
                            <option value="">Беларусь</option>
                        </select>
                    </div>
                    <div>
                        <p class="description-block">Основная информация</p>
                    </div>
                    <div>
                        <label class="form-labels" for="date-birth">Дата рождения*</label>
                        <input class="date-birth" type="date" id="date-birth" name="trip-start" value="2000-01-01"
                               min="1930-01-01" max="2010-12-12" />
                    </div>
                    <div>
                        <label class="form-labels" for="citizenship">Гражданство*</label>
                        <input class="user-info" id="citizenship" type="text" />
                    </div>
                    <div class="exp-select">
                        <label class="form-labels">Опыт работы</label>
                        <div class="work-experience">
                            <input type="radio" name="rb" id="rb1"/>
                            <label class="form-labels" for="rb1">Есть опыт работы</label>
                        </div>
                        <div class="work-experience">
                            <input type="radio" name="rb" id="rb2"/>
                            <label class="form-labels" for="rb2">Нет опыта работы</label>
                        </div>
                        <div class="exp-card">
                            <div>
                                <p class="description-block">Специальность</p>
                                <label class="form-labels" for="place">Желаемая должность*</label>
                                <input class="user-info" id="place" type="text" value="" />
                            </div>
                            <label class="form-labels" for="salary">Зарплата</label>
                            <div class="salary-row">
                                <input class="user-info" id="salary" type="text" value=""/>
                                <label class="form-labels" for="select-salary"/>
                                <select class="small-field" id="select-salary">
                                    <option value="">руб.</option>
                                    <option value="">usd</option>
                                    <option value="">eur</option>
                                </select>
                            </div>
                            <a class="prof-areas" href="#" id="prof-exp">Указать профобласти</a>
                            <div>
                                <p class="description-block">Опыт работы</p>
                                <div class="work-exp-row1">
                                    <p>Места работы</p>
                                    <button class="btn-blue" id="btn2" type="submit">Добавить место работы</button>
                                </div>
                                <div class="work-exp-row2">
                                    <p>О себе</p>
                                    <label class="form-labels" for="description"/>
                                    <textarea id="description"/>
                                </div>
                            </div>
                            <div>
                                <p class="description-block">Образование</p>
                                <label class="form-labels" for="select-education"/>
                                <select class="user-all" id="select-education">
                                    <option value="">Среднее</option>
                                    <option value="">Среднее Специальное</option>
                                    <option value="">Неоконченное высшее</option>
                                    <option value="">Высшее</option>
                                    <option value="">Бакалавр</option>
                                    <option value="">Магистр</option>
                                    <option value="">Кандидат Наук</option>
                                    <option value="">Доктор наук</option>
                                </select>
                            </div>
                            <div class="description-block">Владение языками</div>
                            <div class="description-single">
                                <label class="form-labels" for="select-language">Родной язык</label>
                                <select class="small-field" id="select-language">
                                    <option value="">Русский</option>
                                    <option value="">Английский</option>
                                    <option value="">Французский</option>
                                    <option value="">Немецкий</option>
                                    <option value="">Китайский</option>
                                    <option value="">Другие</option>
                                </select>
                            </div>
                            <div class="work-exp-row1">
                                <p>Иностранные языки</p>
                                <a class="languages" href="#" id="lang">Указать ещё один язык</a>
                            </div>
                        </div>
                    </div>
                    <label class="form-labels" for="achievement">
                    </label>
                    <div class="achievements">
                        <label class="form-labels" for="achievement">Ваши сертификаты:</label>
                        <input class="achievement" id="achievement" type="file" value=""/>
                    </div>
                    <button class="btn-pink" type="submit">Сохранить</button>
                </form>
            </div>
        </div>

</fest:template>
