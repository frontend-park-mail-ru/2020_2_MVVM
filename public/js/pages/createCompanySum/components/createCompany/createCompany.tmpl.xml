<fest:template xmlns:fest="http://fest.mail.ru" context_name="spheres">
    <div class="container">
        <div class="page__name">Создание организации</div>
        <div class="sum__form__wrap">
            <form method="post" action="#" class="sum__form">
                <div class="sum__profile">
                    <div class="sum__profile__photo">
                        <img src="" alt=""/>
                    </div>
                    <p class="sum__description__block">Загрузить логотип</p>
                    <div class="sum__upload__photo">
                        <div class="sum__btn__blue">
                            <input id="comp__img_upload" class="sum__header__img-upload" name="sum__avatar" type="file"
                                   accept=".jpg, .jpeg, .png">
                            </input>
                        </div>
                    </div>
                </div>
                <div id="summary" class="summary">
                    <div>
                        <p class="sum__description__block">Общая информация</p>
                        <label class="sum__form__labels" for="organizationName">Название организации</label>
                        <input class="sum__user__info" name="name" id="organizationName" type="text" value=""/>
                        <span class="error" aria-live="polite"/>
                    </div>
                    <div>
                        <label class="sum__form__labels" for="description">Описание организации</label>
                        <textarea class="__sum__text" id="description" name="description"/>
                        <span class="error" aria-live="polite"/>
                    </div>
                    <div>
                        <label class="sum__form__labels" for="selectBox">Сферы деятельности</label>
                        <div class="multiselect">
                            <div class="selectBox" id="selectBox">
                                <select>
                                    <option>Сферы</option>
                                </select>
                            </div>
                            <div id="checkboxes">
                                <fest:for iterate="spheres" index="i" value="v">
                                    <label for="{i}">
                                        <input type="checkbox" id="{i}"/>
                                        <fest:value>v</fest:value>
                                    </label>
                                </fest:for>
                            </div>
                        </div>
                    </div>
                    <p class="sum__description__block">Контакты</p>
                    <div>
                        <label class="sum__form__labels" for="link">Ссылка на сайт</label>
                        <input class="sum__user__info" name="link" id="link" type="text" value=""/>
                        <span class="error" aria-live="polite"/>
                    </div>
                    <div>
                        <label class="sum__form__labels" for="area_search">Город</label>
                        <select class="sum__user__all" id="area_search" name="area_search">
                            <option value="Москва" selected="true">Москва</option>
                            <option value="Санкт-петербург">Санкт-Петербург</option>
                            <option value="Екатеринбург">Екатеринбург</option>
                        </select>
                    </div>
                    <div class="sum__exp__select" id="pos1">
                        <span class="error" aria-live="polite"/>
                    </div>
                    <button id="send-form-empl" class="sum__btn__pink" type="submit">Сохранить</button>
                </div>
            </form>
        </div>
    </div>
</fest:template>