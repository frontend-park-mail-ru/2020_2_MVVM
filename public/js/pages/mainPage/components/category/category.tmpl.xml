<fest:template xmlns:fest="http://fest.mail.ru" context_name="items">

  <div class="category">
  <h3>Главные категории</h3>
  <p>37 активных вакансий, 0 добавлено сегодня</p>
    <div class="category-grid">
      <div class="category-sec">
        <fest:for from="0" to="3" index="i">
          <div>
            <i class="fa fa-bullhorn fa-4x"></i> <br></br>
            <span><fest:value>items[i].name</fest:value></span>
            <p>(<fest:value>items[i].count</fest:value> вакансии)</p>
          </div>
        </fest:for>
    </div>
      <div class="category-sec">
        <fest:for from="3" to="6" index="i">
          <div>
            <i class="fa fa-bullhorn fa-4x"></i> <br></br>
            <span><fest:value>items[i].name</fest:value></span>
            <p>(<fest:value>items[i].count</fest:value> вакансии)</p>
          </div>
        </fest:for>
      </div>
    </div>
    <div class="btm-all-category">
      Показать все категории
    </div>
  </div>

</fest:template>