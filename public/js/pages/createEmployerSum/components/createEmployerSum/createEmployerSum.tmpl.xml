<fest:template xmlns:fest="http://fest.mail.ru" context_name="content">
    <div class="container">
        <div class="page__name">Создание вакансии</div>
        <div class="sum__form__wrap">
            <form method="post" action="#" class="sum__form">
                <div id="summary" class="summary">
                    <div class="sum__candidate">
                        <div class="sum__exp__card">
                            <p class="sum__description__block">Информация о представителе</p>
                            <div>
                                <label class="sum__form__labels" for="surname">Фамилия</label>
                                <input class="sum__user__info" id="surname" name="surname" type="text"
                                       value="{content.user.surname}" disabled="disabled"/>
                            </div>
                            <div>
                                <label class="sum__form__labels" for="username">Имя</label>
                                <input class="sum__user__info" id="username" name="name" type="text"
                                       value="{content.user.name}"
                                       disabled="disabled"/>
                            </div>
                        </div>
                        <div class="sum__exp__card">
                            <p class="sum__description__block">Информация о компании</p>
                            <div class="comp__logo_title">
                                <div class="comp__logo_avatar">
                                    <img class="avatar" src="{content.comp_logo}" alt=""/>
                                </div>
                                <p class="comp__title">
                                    <fest:value>content.company.name</fest:value>
                                </p>
                            </div>
                            <br/>
                            <p class="comp__description">
                                <fest:value>content.company.description</fest:value>
                            </p>
                            <br/>
                            <div class="rectangle">
                                <fest:for iterate="content.company.spheres" index="i">
                                    <p>
                                        <fest:value>content.spheres[content.company.spheres[i]]</fest:value>
                                    </p>
                                </fest:for>
                            </div>
                            <div>
                                <div class="sum__form__labels">Ссылка на оффициальный сайт
                                    компании:<a href="{content.company.link}"><fest:space/><fest:value>content.company.link</fest:value></a>
                                </div>
                            </div>
                        </div>
                        <div class="sum__exp__card">
                            <p class="sum__description__block">Информация о вакансии</p>
                            <div>
                                <label class="sum__form__labels" for="summary-name">Название вакансии</label>
                                <input class="sum__user__info" name="name" id="summary-name" type="text"
                                       value=""/>
                                <span class="error" aria-live="polite"/>
                            </div>
                            <label class="sum__form__labels" for="description">Описание вакансии</label>
                            <textarea class="__sum__text" name="description" id="description"/>
                            <span class="error" aria-live="polite"/>
                            <div>
                                <label class="sum__form__labels" for="gender">Требуемый пол
                                </label>
                                <select class="sum__user__all" name="gender">
                                    <option value="all" selected="true">Любой</option>
                                    <option value="male">Мужской</option>
                                    <option value="female">Женский</option>
                                </select>
                            </div>
                            <div>
                                <label class="sum__form__labels" for="sphere">Сфера деятельности</label>
                                <select class="sum__user__all" name="sphere" id="sphere">
                                    <fest:each iterate="content.spheres" index="i" value="v">
                                        <option value="{i}"><fest:value>v</fest:value></option>
                                    </fest:each>
                                </select>
                            </div>
                            <div>
                                <label class="sum__form__labels" for="education_level">Требуемый уровень образования
                                </label>
                                <select class="sum__user__all" name="education_level">
                                    <option value="middle" selected="true">Среднее</option>
                                    <option value="specialized_secondary">Среднее специальное</option>
                                    <option value="incomplete_higher">Неоконченное высшее</option>
                                    <option value="higher">Высшее</option>
                                    <option value="bachelor">Бакалавр</option>
                                    <option value="master">Магистр</option>
                                    <option value="phD">Кандидат наук</option>
                                    <option value="doctoral">Доктор наук</option>
                                </select>
                            </div>
                            <div class="sum__exp-select">
                                <label class="sum__form__labels">Требуемый трудовой стаж</label>
                                <select class="sum__user__all" name="experience_month">
                                    <option value="0" selected="true">не требуется</option>
                                    <option value="1">меньше года</option>
                                    <option value="5">1-5 лет</option>
                                    <option value="10">5-10 лет</option>
                                    <option value="11">больше 10 лет</option>
                                </select>
                            </div>
                            <div>
                                <label class="sum__form__labels">Позиция при трудоустройстве</label>
                                <select class="sum__user__all" name="career_level">
                                    <option value="junior" selected="true">junior</option>
                                    <option value="middle">middle</option>
                                    <option value="senior">senior</option>
                                </select>
                            </div>
                            <div class="sum__exp-select">
                                <label class="sum__form__labels">Занятость</label>
                                <select class="sum__user__all" name="employment">
                                    <option value="full-time" selected="true">полная</option>
                                    <option value="part-time">частичная</option>
                                    <option value="remotely">удаленная работа</option>
                                </select>
                            </div>
                            <div>
                                <label class="sum__form__labels">Ключевые навыки</label>
                                <textarea name="skills" class="__sum__text" id="skills" type="text"/>
                                <span class="error" aria-live="polite"/>
                            </div>
                            <div>
                                <label class="sum__form__labels">Требования к кандидату</label>
                                <textarea name="requirements" class="__sum__text" id="requirements" type="text"/>
                                <span class="error" aria-live="polite"/>
                            </div>
                            <div>
                                <label class="sum__form__labels">Обязанности на рабочем месте</label>
                                <textarea name="duties" class="__sum__text" id="duties" type="text"/>
                                <span class="error" aria-live="polite"/>
                            </div>
                            <label class="sum__form__labels" for="salary">Зарплата</label>
                            <div style="display:flex;">
                                <h4 style="align-self:end;">От</h4>
                                <input name="salary_min" class="sum__user__info" id="salary_min" type="text" value=""/>
                                <span class="error" aria-live="polite"/>
                                <h4 style="align-self:end;">До</h4>
                                <input name="salary_max" class="sum__user__info" id="salary_max" type="text" value=""/>
                                <span class="error" aria-live="polite"/>
                            </div>
                        </div>
                        <div class="sum__exp__card">
                            <p class="sum__description__block">Контактные данные</p>
                            <div>
                                <label class="sum__form__labels" for="tel">Телефон</label>
                                <input class="sum__user__info" name="phone" id="phone" type="tel"
                                       value="{content.user.phone}"/>
                                <span class="error" aria-live="polite"/>
                            </div>
                            <div>
                                <label class="sum__form__labels" for="email">E-mail</label>
                                <input class="sum__user__info" name="email" id="email" type="email"
                                       value="{content.user.email}"/>
                                <span class="error" aria-live="polite"/>
                            </div>
                            <div>
                                <label class="sum__form__labels" for="area_search">Город</label>
                                <select class="sum__user__all" id="area_search" name="area_search">
                                    <option value="Москва" selected="true">Москва</option>
                                    <option value="Санкт-петербург">Санкт-Петербург</option>
                                    <option value="Екатеринбург">Екатеринбург</option>
                                </select>
                            </div>
                            <div>
                                <label class="sum__form__labels" for="address">Адрес места работы</label>
                                <input class="sum__user__info" name="location" id="address" type="text"
                                       value=""/>
                                <span class="error" aria-live="polite"/>
                            </div>
                            <div class="sum__exp__select" id="pos1">
                            </div>
                            <span class="error" aria-live="polite"/>
                        </div>
                        <button id="send-form-empl" class="sum__btn__pink" type="submit">Сохранить</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</fest:template>