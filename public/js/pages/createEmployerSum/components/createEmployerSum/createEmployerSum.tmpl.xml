<fest:template xmlns:fest="http://fest.mail.ru">
    <div class="container">
        <div class="sum__form__wrap">
            <div class="sum__profile">
                <div class="sum__profile__photo">
                    <img src="img/profile.png" alt=""/>
                </div>
                <div class="sum__upload__photo">
                    <div class="sum__btn__blue">
                        <p>Загрузить аватар</p>
                    </div>
                </div>
                <div>
                    <h1>Ваше резюме</h1>
                    <div class="btm-apply-alternative sum__upload__resume">
                        <button class="sum__btn__pink" type="submit" form="sum__candidate-form">Загрузить из файла</button>
                        <button class="sum__btn__pink" type="submit">Заказать резюме</button>
                    </div>
                </div>
            </div>
            <div id="summary" class="summary">
                <form class="sum__candidate" method="post" action="#" id="sum__candidate-form" enctype="multipart/form-data">
                    <input class="sum__header__img-upload" name="sum__avatar" type="file" accept=".jpg, .jpeg, .png"/>
                    <div>
                        <p class="sum__description__block">Информация о компании</p>
                        <label class="sum__form__labels" for="company">Название компании*</label>
                        <input class="sum__user__info" name="sum__company-name" id="company" type="text" value="" />
                        <span class="error" aria-live="polite"/>
                    </div>
                    <div>
                        <label class="sum__form__labels" for="summary-name">Название вакансии*</label>
                        <input class="sum__user__info" name="sum__vacancy-name" id="summary-name" type="text" value="" />
                        <span class="error" aria-live="polite"/>
                    </div>
                    <div>
                        <label class="sum__form__labels" for="description">Описание вакансии*</label>
                        <textarea class="__sum__text" name="sum__vacancy-description" id="description"/>
                        <span class="error" aria-live="polite"/>
                    </div>
                    <div class="sum__exp__row">
                        <label class="sum__form__labels" for="exp-duration">Требуемый опыт работы</label>
                        <label class="sum__form__labels" id="exp-row-start" for="education"/>
                        <select class="sum__user__all" id="education">
                            <option id="exp-need" value="">требуется</option>
                            <option value="">не требуется</option>
                        </select>
                    </div>
                    <p class="sum__description__block">Контакты</p>
                    <div>
                        <label class="sum__form__labels" for="email">E-mail</label>
                        <input class="sum__user__info" name="sum__vacancy-email" id="email" type="email"  value=""/>
                        <span class="error" aria-live="polite"/>
                    </div>

                    <div>
                        <label class="sum__form__labels" for="tel">Телефон для связи</label>
                        <input class="sum__user__info" name="sum__vacancy-tel" id="tel" type="tel" value="" placeholder="+7-(999)-999-99-99"/>
                        <span class="error" aria-live="polite"/>
                    </div>
                    <div>
                        <label class="sum__form__labels" for="address">Адрес места работы*</label>
                        <input class="sum__user__info" name="sum__vacancy-address" id="address" type="text" value="" />
                        <span class="error" aria-live="polite"/>
                    </div>
                    <div class="sum__exp__select" id="pos1">
                    </div>
                    <button id="send-form-empl" class="sum__btn__pink" type="submit">Сохранить</button>
                </form>
            </div>
        </div>
    </div>
</fest:template>