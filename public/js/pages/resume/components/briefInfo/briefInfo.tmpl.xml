<fest:template xmlns:fest="http://fest.mail.ru" context_name="items">

  <div class="cand-options">

    <div class="cand-options-main-skill">
        <fest:each iterate="items.mainSkill" index="i" value="n">
          <div class="main-skill-item">
            <fest:value>n</fest:value>
          </div>
        </fest:each>
    </div>


    <div class="cand-options-bio">
      <div class="cand-options-photo">
        <img src="img/es1.jpg" alt=""> </img>
      </div>
      <div class="about-candidate">
        <h3><fest:value>items.name</fest:value></h3>
        <p><fest:value>items.position</fest:value></p>
        <p><fest:value>items.mail</fest:value></p>
        <p>Зарегистрирован с <fest:space/> <fest:value>items.dateReg</fest:value></p>
        <p><i class="fa fa-map-marker"></i>
          <fest:value>items.Location</fest:value></p>
      </div>
    </div>
    <div class="cand-options-contact">
      <i class="fa fa-envelope"></i>
      <span>Написать</span>
      <i class="fas fa-save"></i>
      <span>Сохранить резюме</span>
    </div>
  </div>

</fest:template>