<fest:template xmlns:fest="http://fest.mail.ru" context_name="job">
    <div class="bg">
        <div class="popUp__cont">
            <div class="popUp__cont_block"/>
            <div class="popUp__cont_center">
                <div class="popUp__cont_lable">Опыт работы</div>
                <form class="popUp__cont_form" id="popUp__cand_form">
                    <span class="error" aria-live="polite"/>
                    <div class="popUp__cont_input">
                        <label for="start_work">Начало работы</label>
                        <div class="popUp__cont_data">
                            <div>
                                <input id="start_work" type="date" name="begin" value="{job.begin}"/>
                                <span class="error" aria-live="polite"/>
                            </div>
                        </div>
                    </div>
                    <fest:if test="job.finish=='today'">
                        <input type="checkbox" id="popUp__cont_checkbox" name="checkbox" checked="true"/>По текущее время
                    </fest:if>
                    <fest:if test="job.finish!='today'">
                        <input type="checkbox" id="popUp__cont_checkbox" name="checkbox" />По текущее время
                        <br/>
                        <br/>
                        <div class="popUp__cont_input" id="div-finish">
                            <fest:include context="job.finish" src="../endWorkField/endWorkField.tmpl.xml"/>
                        </div>
                    </fest:if>
<!--                    <br/>-->
<!--                    <br/>-->
<!--                    <div class="popUp__cont_input" id="div-finish">-->
<!--                        <fest:include context="job.finish" src="../endWorkField/endWorkField.tmpl.xml"/>-->
<!--                    </div>-->
                    <span class="error" aria-live="polite"/>
                    <div class="popUp__cont_input">
                        <label for="position">Должность</label>
                        <div>
                            <input class="popUp__cont_text" id="position" name="position" placeholder="Должность" value="{job.position}"/>
                            <span class="error" aria-live="polite"/>
                        </div>
                    </div>
                    <div class="popUp__cont_input">
                        <label for="job">Организация</label>
                        <div>
                            <input class="popUp__cont_text" id="job" name="name_job" placeholder="Название компании" value="{job.name_job}"/>
                            <span class="error" aria-live="polite"/>
                        </div>
                    </div>
                    <div class="popUp__cont_input">
                        <label for="duties">Обязанности на рабочем месте</label>
                        <div>
                            <textarea class="popUp__cont_text" id="duties" name="duties" placeholder="Опишите, что вы делали на работе. Работодатели часто ищут резюме по ключевым навыкам, например, «работа в торговом зале», «работа с документами», «сопровождение первых лиц», «управление коллективом» и т.д.">
                                <fest:value>job.duties</fest:value>
                            </textarea>
                            <span class="error" aria-live="polite"/>
                        </div>
                    </div>
                    <button class="btn__add_exp" type="submit">сохранить</button>
                </form>
            </div>
            <div class="popUp__cont_block"/>
        </div>
    </div>
</fest:template>