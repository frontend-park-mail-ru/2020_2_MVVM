<fest:template xmlns:fest="http://fest.mail.ru" context_name="items">
    <fest:if test="items.user=='candidate'">
        <fest:if test="!items.rec_vac">
            <div class="note-popup" id="notePopup">
                <div class="popup-content">
                    <div class="menu-list-block__item menu-list-block__item_note_head">Ваши уведомления</div>
                    <div class="menu-list-block__item menu-list-block__item_note">Уведомлений пока нет</div>
                </div>
            </div>
        </fest:if>
        <fest:if test="items.rec_vac">
            <div class="note-popup" id="notePopup">
                <div class="popup-content">
                    <div class="menu-list-block__item menu-list-block__item_note_head">Ваши уведомления</div>
                    <div class="menu-list-block__item menu-list-block__item_note">Мы подобрали для вас<fest:space/>
                        <a href="/recommendations">
                            <fest:value output="text">items.rec_vac</fest:value>
                        </a>
                        .
                    </div>
                </div>
            </div>
        </fest:if>
    </fest:if>
    <fest:if test="items.user=='employer'">
        <fest:if test="!items.rec_vac">
            <div class="note-popup" id="notePopup">
                <div class="popup-content">
                    <div class="menu-list-block__item menu-list-block__item_note_head">Ваши уведомления</div>
                    <div class="menu-list-block__item menu-list-block__item_note">Уведомлений пока нет</div>
                </div>
            </div>
        </fest:if>
        <fest:if test="items.rec_vac">
            <div class="note-popup" id="notePopup">
                <div class="popup-content">
                    <div class="menu-list-block__item menu-list-block__item_note_head">Ваши уведомления</div>
                    <div class="menu-list-block__item menu-list-block__item_note">Уведомления для работодателя
                    </div>
                </div>
            </div>
        </fest:if>
    </fest:if>
</fest:template>